<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_gap"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:layout_constraintTop_toBottomOf="@+id/progressBar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_margin="16dp">

        <TextView
            android:id="@+id/langLevelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textAppearance="@style/TextAppearance.MyTheme.Headline5"
            app:layout_constraintBaseline_toBaselineOf="@+id/langLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/langLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GERMAN"
            android:textAppearance="@style/TextAppearance.MyTheme.Headline5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dueTodayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="125/5000"
            android:textAppearance="@style/TextAppearance.MyTheme.Headline6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Due today:"
            android:textAppearance="@style/TextAppearance.MyTheme.Overline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/langLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>