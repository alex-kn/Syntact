<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chooseLanguageCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_secondary"
    tools:showIn="@layout/add_language_choose_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/chooseLanguageImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@color/color_primary"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/chooseLanguageTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#77000000"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.MyTheme.Caption"
            app:layout_constraintBottom_toBottomOf="@id/chooseLanguageImage"
            app:layout_constraintEnd_toEndOf="@id/chooseLanguageImage"
            app:layout_constraintStart_toStartOf="@id/chooseLanguageImage" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>