<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenuFragment">

    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="com.alexkn.syntact.presentation.play.menu.PlayMenuFragment"
        android:label="fragment_main_menu"
        tools:layout="@layout/play_menu_fragment" >
        <action
            android:id="@+id/action_mainMenuFragment_to_hangmanBoardFragment"
            app:destination="@+id/hangmanBoardFragment"
            app:enterAnim="@anim/zoom_enter"
            app:exitAnim="@anim/zoom_exit"
            app:popEnterAnim="@anim/zoom_enter_pop"
            app:popExitAnim="@anim/zoom_exit_pop"
            app:popUpTo="@+id/mainMenuFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_addLanguageFragment"
            app:destination="@id/addLanguageFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_templateFragment"
            app:destination="@id/templateFragment" />
    </fragment>
    <fragment
        android:id="@+id/hangmanBoardFragment"
        android:name="com.alexkn.syntact.presentation.play.board.BoardFragment"
        android:label="fragment_hangman_board"
        tools:layout="@layout/board_fragment" >
        <argument
            android:name="bucketId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/addLanguageFragment"
        android:name="com.alexkn.syntact.presentation.bucket.create.CreateBucketFragment"
        android:label="add_language_fragment"
        tools:layout="@layout/bucket_create_fragment" />
    <fragment
        android:id="@+id/templateFragment"
        android:name="com.alexkn.syntact.presentation.template.list.ListTemplatesFragment"
        android:label="template_fragment"
        tools:layout="@layout/template_list_fragment" >
        <action
            android:id="@+id/action_templateFragment_to_templateCreateFragment"
            app:destination="@id/templateCreateFragment" />
    </fragment>
    <fragment
        android:id="@+id/templateCreateFragment"
        android:name="com.alexkn.syntact.presentation.template.create.CreateTemplateFragment"
        android:label="template_create_fragment"
        tools:layout="@layout/template_create_fragment" />
</navigation>
