<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/deckListFragment">
    <fragment
        android:id="@+id/deckListFragment"
        android:name="com.alexkn.syntact.presentation.decklist.DeckListFragment"
        android:label="deck_list_fragment"
        tools:layout="@layout/deck_list_fragment">
        <action
            android:id="@+id/action_deckListFragment_to_deckDetailsFragment"
            app:destination="@id/deckDetailsFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_exit"
            app:popExitAnim="@anim/fragment_close_enter" />
        <action
            android:id="@+id/action_deckListFragment_to_deckBoardFragment"
            app:destination="@id/deckBoardFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_exit"
            app:popExitAnim="@anim/fragment_close_enter" />
        <action
            android:id="@+id/action_deckListFragment_to_deckSelectionFragment"
            app:destination="@id/deckSelectionFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_exit"
            app:popExitAnim="@anim/fragment_close_enter" />
        <action
            android:id="@+id/action_deckListFragment_to_deckCreationFragment2"
            app:destination="@id/deckCreationFragment"  app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_exit"
            app:popExitAnim="@anim/fragment_close_enter"/>
    </fragment>
    <fragment
        android:id="@+id/deckBoardFragment"
        android:name="com.alexkn.syntact.presentation.deckboard.DeckBoardFragment"
        android:label="deck_board_fragment"
        tools:layout="@layout/deck_board_fragment">
        <argument
            android:name="deckId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/deckCreationFragment"
        android:name="com.alexkn.syntact.presentation.deckcreation.DeckCreationFragment"
        android:label="deck_creation_fragment"
        tools:layout="@layout/deck_creation_fragment" />
    <fragment
        android:id="@+id/deckDetailsFragment"
        android:name="com.alexkn.syntact.presentation.deckdetails.DeckDetailsFragment"
        android:label="deck_details_fragment"
        tools:layout="@layout/deck_details_fragment">
        <argument
            android:name="deckId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/deckSelectionFragment"
        android:name="com.alexkn.syntact.presentation.deckselection.DeckSelectionFragment"
        android:label="deck_selection_fragment"
        tools:layout="@layout/deck_selection_fragment"/>
</navigation>
