<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/playMenuFragment">
    <fragment
        android:id="@+id/boardFragment"
        android:name="com.alexkn.syntact.presentation.play.board.BoardFragment"
        android:label="board_fragment"
        tools:layout="@layout/board_fragment">
        <argument
            android:name="bucketId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/createBucketFragment"
        android:name="com.alexkn.syntact.presentation.bucket.create.CreateBucketFragment"
        android:label="bucket_create_fragment"
        tools:layout="@layout/bucket_create_fragment" />
    <fragment
        android:id="@+id/listBucketsFragment"
        android:name="com.alexkn.syntact.presentation.bucket.list.ListBucketsFragment"
        android:label="bucket_list_fragment"
        tools:layout="@layout/bucket_list_fragment">
        <action
            android:id="@+id/action_listBucketsFragment_to_createBucketFragment"
            app:destination="@id/createBucketFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/playMenuFragment"
        android:name="com.alexkn.syntact.presentation.play.menu.PlayMenuFragment"
        android:label="play_menu_fragment"
        tools:layout="@layout/play_menu_fragment">
        <action
            android:id="@+id/action_playMenuFragment_to_boardFragment"
            app:destination="@id/boardFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/createTemplateFragment"
        android:name="com.alexkn.syntact.presentation.template.create.CreateTemplateFragment"
        android:label="template_create_fragment"
        tools:layout="@layout/template_create_fragment" />
    <fragment
        android:id="@+id/listTemplatesFragment"
        android:name="com.alexkn.syntact.presentation.template.list.ListTemplatesFragment"
        android:label="template_list_fragment"
        tools:layout="@layout/template_list_fragment">
        <action
            android:id="@+id/action_listTemplatesFragment_to_createTemplateFragment"
            app:destination="@id/createTemplateFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
</navigation>
