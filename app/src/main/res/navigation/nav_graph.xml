<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/playMenuFragment">
    <fragment
        android:id="@+id/createBucketFragment"
        android:name="com.alexkn.syntact.presentation.createbucket.CreateBucketFragment"
        android:label="bucket_create_fragment"
        tools:layout="@layout/create_bucket_fragment">
        <action
            android:id="@+id/action_createBucketFragment_to_createTemplateFragment"
            app:destination="@id/createTemplateFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_exit"
            app:popExitAnim="@anim/fragment_close_enter" />
    </fragment>
    <fragment
        android:id="@+id/playMenuFragment"
        android:name="com.alexkn.syntact.presentation.bucketlist.PlayMenuFragment"
        android:label="play_menu_fragment"
        tools:layout="@layout/bucket_list_fragment">
        <action
            android:id="@+id/action_playMenuFragment_to_flashcardFragment"
            app:destination="@id/flashcardFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_exit"
            app:popExitAnim="@anim/fragment_close_enter" />
        <action
            android:id="@+id/action_playMenuFragment_to_createBucketFragment"
            app:destination="@id/createBucketFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_exit"
            app:popExitAnim="@anim/fragment_close_enter" />
        <action
            android:id="@+id/action_playMenuFragment_to_bucketDetailsFragment"
            app:destination="@id/bucketDetailsFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_exit"
            app:popExitAnim="@anim/fragment_close_enter" />
    </fragment>
    <fragment
        android:id="@+id/flashcardFragment"
        android:name="com.alexkn.syntact.presentation.flashcard.FlashcardFragment"
        android:label="flashcard_fragment"
        tools:layout="@layout/flashcard_fragment">
        <argument
            android:name="bucketId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/bucketDetailsFragment"
        android:name="com.alexkn.syntact.presentation.bucketdetails.BucketDetailsFragment"
        android:label="BucketDetailsFragment">
        <argument
            android:name="bucketId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/createTemplateFragment"
        android:name="com.alexkn.syntact.presentation.createtemplate.CreateTemplateFragment"
        android:label="create_template_fragment"
        tools:layout="@layout/create_template_fragment" />
</navigation>
