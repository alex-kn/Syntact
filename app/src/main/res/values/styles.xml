<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">

        <item name="colorPrimary">@color/lightShades</item>
        <item name="colorPrimaryDark">@color/darkShades</item>
        <item name="colorSecondary">@color/main</item>

        <item name="colorOnPrimary">@color/darkShades</item>
        <item name="colorOnSecondary">@color/darkShades</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/darkShades</item>

        <item name="materialCardViewStyle">@style/HangwordsCardStyle</item>

        <!--<item name="android:windowBackground">@color/darkShades</item>-->
        <item name="android:textColorPrimary">@color/darkShades</item>
    </style>

    <style name="HangwordsCardStyle" parent="Widget.MaterialComponents.CardView">

        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_stroke_color_selector</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <!--<item name="android:strokeColor">@color/darkShades</item>-->
        <!--<item name="android:strokeWidth">4</item>-->
        <!--<item name="android:strokeAlpha">1</item>-->

    </style>
    



</resources>
