<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.alexknittel.syntact">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="dev.alexknittel.syntact.app.SyntactApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_orange"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_orange_round"
        android:supportsRtl="true"
        android:theme="@style/MyTheme.DayNight"
        android:windowSoftInputMode="stateHidden|adjustResize">
        <activity android:name="dev.alexknittel.syntact.presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
